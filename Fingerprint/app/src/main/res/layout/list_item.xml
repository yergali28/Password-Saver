<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardElevation="10dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomTextView
            android:id="@+id/contextTextView"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/colorTextGreen"
            android:text="1. 72623499240"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/login"
                    android:src="@drawable/ic_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomTextView
                    android:id="@+id/loginTextView"
                    android:layout_toEndOf="@+id/login"
                    android:layout_centerVertical="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    android:text="13 November 2017"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/copyLoginImageView"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/ic_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pass"
                    android:src="@drawable/ic_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomTextView
                    android:id="@+id/passwordTextView"
                    android:layout_toEndOf="@+id/pass"
                    android:layout_centerVertical="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    android:text="13 November 2017"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/copyPassImageView"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/ic_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>