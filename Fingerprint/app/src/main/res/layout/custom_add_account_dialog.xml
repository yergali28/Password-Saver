<?xml version="1.0" encoding="utf-8"?>
<LinearLayout app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:id="@+id/fragment_history_menu_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_title"
                />

            <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomEditText
                android:id="@+id/titleEditText"
                android:inputType="text"
                android:hint="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_login"
                />

            <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomEditText
                android:id="@+id/loginEditText"
                android:inputType="text"
                android:hint="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_pass"
                />

            <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomEditText
                android:id="@+id/passEditText"
                android:inputType="text"
                android:hint="Password"
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <kz.yergalizhakhan.fingerprint.CustomWidgets.CustomButton
        android:id="@+id/addAccountButton"
        android:text="SAVE"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textColor="@color/colorTextWhite"
        android:background="@color/colorTextGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>